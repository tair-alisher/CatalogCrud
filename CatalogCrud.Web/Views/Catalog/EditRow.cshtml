<td id="edit-row-form" class="row-form">
    <input type="hidden" name="fieldRowNumber" id="fieldRowNumber" value="@ViewBag.RowNumber" />

    @foreach (var value in ViewBag.Row)
    {
        <div class="input-group input-group-sm edit-row-form-field">
            <div class="input-group-prepend">
                <span class="input-group-text">@value.Field.Name</span>
            </div>
            <input type="hidden" name="ids[]" class="value-id" value="@value.Id" />
            <input type="hidden" name="fields[]" class="field-id" value="@value.Field.Id" />
            <input type="text" name="values[]" class="form-control form-control-sm field-value" value="@value.Title" />
        </div>
    }

    <div class="form-group submit-btn">
        <button type="button" class="btn btn-primary btn-sm" onclick="saveChanges()">Сохранить</button>
    </div>
</td>