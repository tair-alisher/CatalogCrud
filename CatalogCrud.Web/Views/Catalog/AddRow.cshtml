@model IEnumerable<CatalogCrud.Web.Models.ViewModels.FieldVM>

<div id="add-row-form" class="row-form">
    <input type="hidden" name="fieldRowNumber" id="fieldRowNumber" value="@ViewBag.RowNumber" />

    @foreach (var field in Model)
    {
        <div class="input-group input-group-sm add-row-form-field">
            <div class="input-group-prepend">
                <span class="input-group-text">@field.Name</span>
            </div>
            <input type="hidden" name="fields[]" class="field-id" value="@field.Id" />
            <input type="text" name="values[]" class="form-control form-control-sm field-value" />
        </div>
    }

    <div class="form-group submit-btn">
        <button type="button" class="btn btn-primary btn-sm" onclick="save()">Сохранить</button>
    </div>
</div>